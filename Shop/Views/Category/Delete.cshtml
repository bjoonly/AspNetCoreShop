@model Shop.Models.Category

<form method="post" asp-action="DeletePost" asp-controller="Category">
    <input asp-for="Id" hidden />
    <div class="my-5 p-3 border col col-md-8 col-lg-7 mx-auto">
        <div class="form-group row ">
            <h2 class="pl-3">Delete Category</h2>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group col px-0">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" disabled class="form-control"  />
                  
                </div>
                <div class="form-group col  px-0">
                    <label asp-for="ShowOrder"></label>
                    <input asp-for="ShowOrder" disabled class="form-control" />
                    
                </div>
                <div class="form-group col px-0 pt-2 mb-0">
                    <div class="row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger  col w-75" value="Delete" />
                        </div>
                        <div class="col text-right">
                            <a asp-action="Index" class="btn btn-info col w-75"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
