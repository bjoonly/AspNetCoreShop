@model Shop.Models.Category

<form method="post" asp-action="Create" asp-controller="Category">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="my-5 p-3 border rounded col col-md-8 col-lg-7 mx-auto">
        <div class="form-group row ">
            <h2 class="pl-3">Add Category</h2>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group col px-0">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group col  px-0">
                    <label asp-for="ShowOrder"></label>
                    <input asp-for="ShowOrder" class="form-control" placeholder="Enter the number of orders" />
                    <span class="text-danger" asp-validation-for="ShowOrder"></span>
                </div>
                <div class="form-group col px-0 pt-2 mb-0">
                    <div class="row">
                        <div class="col">
                            <input type="submit" class="btn btn-success  col w-75" value="Create" />
                        </div>
                        <div class="col text-right">
                            <a asp-action="Index" class="btn btn-info col w-75"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
                        <partial name="_ValidationScriptsPartial" /> }
}