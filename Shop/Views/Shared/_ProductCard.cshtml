@model Shop.Models.Product

    <div class="col-lg-4 col-md-6 my-3 filter @Model.Category.Name.Replace(" ","_")"  >
        <div class="h-100 card text-white bg-dark mb-3 mx-auto mx-md-0" style="max-width: 20rem;">
            <div  class="card-header row  m-0">
          <div class="col-8  px-0">
              <span class="card-text"> @Model.Name</span>
          </div> 
            <div class="col-4  px-0">
                <span class="card-text">@Model.Price &#8372;</span>
            </div>
            </div>
            <div class="card-body d-flex flex-column">
                @if (Model.Image != null)
                {
                <img class="w-100 my-2" src="@ENV.ImagePath@Model.Image"/>
                }
                <p  class="card-text">@Model.ShortDesc</p>
              
                <span  class="btn bg-warning mt-auto w-25">@Model.Category.Name</span>
            
            </div>
            <div class="card-footer">
                <a asp-action="Details" asp-route-id="@Model.Id"  class="btn btn-success col">View details</a>
            </div>
        </div>
    </div>