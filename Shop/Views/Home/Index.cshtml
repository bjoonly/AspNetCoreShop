@model Shop.Models.ViewModels.HomeVM

<div class="containerp-0">
    <div class="text-center">
        <button class="btn btn-info btn-filter" data-filter="all">All</button>
        @foreach (var item in Model.Categories)
        {
            <button class="btn btn-info btn-filter" data-filter="@item.Name.Replace(" ","_")">@item.Name</button>
        }
    </div>
    <div class="row">
        @foreach (var item in Model.Products)
        {
            <partial name="_ProductCard" model="item" />
        }
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $(".btn-filter").click(function () {
                let value = $(this).attr('data-filter');
                if (value == "all") {
                    $('.filter').show('1000');
                }
                else {
                    $('.filter').not('.' + value).hide('1000');
                    $('.filter').filter('.' + value).show('1000');

                }
            })
        })
    </script>

}