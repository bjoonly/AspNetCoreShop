@model IEnumerable<Shop.Models.Product>


    <div class="container-fluid p-0">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-dark">Product List</h2>
            </div>
            <div class="col-6 d-flex">
                <a class="btn btn-success align-self-end ml-auto" asp-controller="Product" asp-action="Upsert"> Create new product</a>
            </div>
        </div>
        @if (Model.Count() > 0)
        {
    <table class="table table-bordered table-striped my-3 ">
        <thead class="table-dark">
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Category
                </th>
                <th>
    
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
        <tr>
            <td  width="35%">@item.Name</td>
            <td  >@item.Price</td>
            <td  >@item.Category.Name</td>
            <td  width="40%">
                <div class="row px-2">
    
                    <a class="btn btn-warning col mx-1 mx-lg-3" asp-route-Id="@item.Id" asp-controller="Product" asp-action="Upsert">Edit</a>
                    <a class="btn btn-danger col mx-1 mx-lg-3" asp-route-Id="@item.Id" asp-controller="Product" asp-action="Delete">Delete</a>
                </div>
            </td>
        </tr>
    }
        </tbody>
    </table> }
    else
    {
    <p>No products found.</p>}
    </div>