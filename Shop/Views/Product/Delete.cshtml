@model Shop.Models.Product


<form method="post">

    <input asp-for="Id" hidden />
    <div class="my-5 p-3 border rounded col col-md-10 col-lg-9 mx-auto">
        <div class="form-group row ">
            <h2 class="pl-3">Delete Product</h2>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group col px-0">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" disabled />

                </div>
                <div class="form-group col px-0">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" disabled />

                </div>
                <div class="form-group col px-0">
                    <label asp-for="ShortDesc"></label>
                    <input asp-for="ShortDesc" class="form-control" disabled />

                </div>
                <div class="form-group col px-0">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control summernote"></textarea>

                </div>
                @if (Model.Id != 0 && Model.Image != null)
                 {
                     <div class="form-group col px-0">
                     <img src="@ENV.ImagePath@Model.Image" class="w-100" alt="Product" />
                     </div>
                 }
                <div class="form-group col px-0">
                    <label asp-for="CategoryId"></label>
                    <input asp-for="Category.Name" class="form-control" disabled />


                </div>
                <div class="form-group col px-0 pt-2 mb-0">
                    <div class="row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger  col w-75" value="Delete" />
                        </div>
                        <div class="col text-right">
                            <a asp-action="Index" class="btn btn-info col w-75"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
                        <partial name="_ValidationScriptsPartial" /> }
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250
            });
            $('.note-editable').attr('contenteditable', false);
        });
    </script>
}